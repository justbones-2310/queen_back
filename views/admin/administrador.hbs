<div class="container">
    {{! fila 1 }}
    <div class="row">
        <p class="text-end"> Hola {{usuario}}, bienvenidx ! 
           <a class="button" href="/admin/login/logout"> Cerrar sesión <i class="bi bi-door-closed"></i></a> 
        </p>
    </div>
    {{! fin fila 1 }}

    {{! fila 2 }}
    <div class="row">
        <div class="col-7 text-start">
            <h3> Listado de Canciones </h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/administrador/agregar"> 
                <i class="bi bi-plus" aria-hidden="true"></i>
                Nuevo
            </a>
        </div>
    </div>
    {{! fin fila 2 }}

    {{! fila 3 }}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col"> # </th>
                        <th scope="col"> Título </th>
                        <th scope="col"> Imagen </th>
                        <th class="text-end"> Acciones </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each administrador}}                    
                    <tr>
                       <th scope="row"> {{id}} </th>
                       <td> {{titulo}} </td>
                       <td> {{{imagen}}} </td>
                       <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/administrador/modificar/{{id}}"> <i class="bi bi-pencil" aria-hidden="true"></i></a>
                        <a class="btn btn-secondary" href="/admin/administrador/eliminar/{{id}}"> <i class="bi bi-trash" aria-hidden="true"></i></a>
                       </td> 
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{! fin fila 3 }}

</div>